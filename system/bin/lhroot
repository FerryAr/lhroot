    folder="/data/ubuntu"
    if [ -d "$folder" ]; then
        first=1
        echo "skipping downloading"
    fi
    tmp="/data/local/tmp"
    tarball="$tmp/ubuntu.tar.xz"
    archurl=
    if [ "$first" != 1 ]; then
        if [ ! -f $tarball ]; then
            echo "Downloading Rootfs, please wait..."
            case $ARCH in
                arm)
                    archurl="armhf" ;;
                arm64)
                    archurl="arm64" ;;
                x86)
                    archurl="i386" ;;
                x64)
                    archurl="amd64" ;;
                *)
                    abort "unknown arch"
